<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainCadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Nome do medicamento -->
    <EditText
        android:id="@+id/etNomeMedicamento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="Nome do medicamento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dosagem -->
    <EditText
        android:id="@+id/etDosagem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="Dosagem (ex: 500mg)"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etNomeMedicamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Horário de uso -->
    <EditText
        android:id="@+id/etHorario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="Horário de uso (HH:MM)"
        android:inputType="time"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etDosagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botão Salvar -->
    <Button
        android:id="@+id/btnSalvarMedicamento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Salvar"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/etHorario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botão Voltar abaixo de Salvar -->
    <Button
        android:id="@+id/buttonVoltar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="← Voltar"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnSalvarMedicamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
